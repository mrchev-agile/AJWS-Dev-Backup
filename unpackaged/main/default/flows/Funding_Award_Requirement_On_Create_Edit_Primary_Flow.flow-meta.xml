        <label>Update Submitted Fields</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <flowName>Funding_Award_Requirement_Subflow_Update_Submitted_Fields</flowName>
        <inputAssignments>
            <name>recordId</name>
            <value>
                <elementReference>$Record.Id</elementReference>
            </value>
        </inputAssignments>
    </subflows>
</Flow>

<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Anonymous_Rules</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
      Flag_as_Anonymous__pc  = TRUE,
    ISBLANK(Account_name_for_External_reports__pc )
)</errorConditionFormula>
    <errorDisplayField>Account_name_for_External_reports__pc</errorDisplayField>
    <errorMessage>&quot;You must add name to the Account Name for External Reports field.&quot;</errorMessage>
</ValidationRule>
